<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.dawid.wtistemple.logowanieActivity">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/loginLogowanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="74dp"
        android:ems="10"
        android:hint="Wpisz nazwę użytkownika"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/hasloLogowanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Wpisz hasło"
        android:inputType="textPassword"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/loginLogowanie"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.503" />

    <Button
        android:id="@+id/logowanieBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logowanie"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/hasloLogowanie"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="click"/>

    <Button
        android:id="@+id/rejestracjaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rejestracja"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/logowanieBtn"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="click"
        app:layout_constraintHorizontal_bias="0.502" />

    <ProgressBar
        android:id="@+id/logowaniePB"
        style="?android:attr/progressBarStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintLeft_toRightOf="@+id/logowanieBtn"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/logowanieBtn"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="@+id/logowanieBtn"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintVertical_bias="0.0"
        android:visibility="invisible"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>
